<% var title = product.name; %>
<% var js = ['product']; %>
<% var css = ['product']; %>

<% include header %>

<div id="product" class="container-fluid">
  <div class="row text-center">
    <div class="col-xs-4">
      <img class="product-image" src="<%= product.picUrl %>">
    </div>
    <div class="col-xs-6 col-xs-offset-1">
      <div class="product-row"><%= product.name %></div>
      <div class="product-row">$<%= product.price.toFixed(2) %></div>
      <div class="product-row"><%= product.description %></div>
      <div class="product-row" id='product-id' data-product-id='<%= product.id %>'></div>
      <div class="product-row">
        <button type="button" class="btn btn-primary btn-lg" id="add-to-cart">Add to Cart</button>
      </div>
    </div>
  </div>
  <div class="reviews row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>Reviews</h2>
      <% if(product.reviews.length > 0) { %>
        <% for(var i = 0; i < product.reviews.length; i++) { %>
          <% var r = product.reviews[i]; %>
          <div class="row">
            <div class="col-xs-2"><%= r.name %></div>
            <div class="col-xs-2 col-xs-offset-1">
              <% for(var j = 1; j <= 5; j++) { %>
                <% if(j <= r.stars) { %>
                  <span class="glyphicon glyphicon-star gold"></span>
                <% } else { %>
                  <span class="glyphicon glyphicon-star-empty gold"></span>
                <% } %>
              <% } %>
            </div>
            <div class="col-xs-6 col-xs-offset-1"><%= r.comment %></div>
          </div>
        <% } %>
        <div class="row">
          <h2 class="col-xs-2 col-xs-offset-2">Average</h2>
        </div>
      <% } else { %>
        <div>There are no reviews for this product yet.</div>
      <% } %>
    </div>
  </div>
</div>

<% include footer %>
